<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wxj.IM.dao.LoginAndResignDao">
    <select id="login" parameterType="map" resultType="int">
        select count(1) from userInfo where account=#{account} and password=#{password}
    </select>
    
    <insert id="add" parameterType="map">
       insert into userInfo values(#{id},#{account},#{password},#{nickName},#{gender},#{idCard},#{tel},#{address},#{resignTime})
    
    </insert>
    
    <select id="checkAccount" parameterType="java.lang.String" resultType="int">
          SELECT count(0) FROM userINfo where account=#{account}
    </select>
</mapper>
